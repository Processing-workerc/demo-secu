<body>

<div class="card" id="mainCard">
    <div id="statusHeader" class="header">Chargement...</div>
    
    <h3>Connexion Salari√©</h3>
    <input type="text" id="user" placeholder="Identifiant" required>
    <div id="passArea"></div>
    <button onclick="login()" id="btnAction">Se connecter</button>

    <div id="hackerConsole" class="console"></div>
</div>

<script>
    // 1. R√©cup√©ration du mode dans l'URL
    const params = new URLSearchParams(window.location.search);
    const mode = params.get('mode');
    
    const card = document.getElementById('mainCard');
    const header = document.getElementById('statusHeader');
    const passArea = document.getElementById('passArea');
    const btn = document.getElementById('btnAction');

    // 2. Configuration de l'affichage
    if (mode === 'secure') {
        card.classList.add('secure-mode');
        header.innerHTML = "üîí MODE S√âCURIS√â (HTTPS)";
        passArea.innerHTML = '<input type="password" id="pass" placeholder="Mot de passe">';
        btn.innerText = "Connexion S√©curis√©e";
    } else {
        // Par d√©faut ou si mode=insecure
        card.classList.add('insecure-mode');
        header.innerHTML = "‚ö†Ô∏è MODE NON S√âCURIS√â";
        passArea.innerHTML = ''; // Pas de mot de passe
        btn.innerText = "Connexion Rapide";
    }

    // 3. Action du bouton
    function login() {
        const username = document.getElementById('user').value;
        const consoleDiv = document.getElementById('hackerConsole');
        
        if(!username) { alert("Mettez un nom !"); return; }

        consoleDiv.style.display = 'block';

        if (mode === 'secure') {
            consoleDiv.innerHTML = "PIRATE INTERCEPTE : <br> > #x8s!kL9... (Donn√©es illisibles)";
            consoleDiv.style.color = "#888"; // Gris car √©chec du pirate
        } else {
            consoleDiv.innerHTML = "PIRATE INTERCEPTE : <br> > USER: " + username + "<br> > PASS: (Vide) <br> > ACCES: TOTAL";
            consoleDiv.style.color = "#0f0"; // Vert hacker
        }
    }
</script>

