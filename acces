<script>
    // R√©cup√©ration du param√®tre dans l'URL (secure ou insecure)
    const urlParams = new URLSearchParams(window.location.search);
    const mode = urlParams.get('mode');

    const card = document.getElementById('card');
    const badge = document.getElementById('badge');
    const btn = document.getElementById('action-btn');
    const passContainer = document.getElementById('password-container');

    // Configuration de l'interface selon le mode
    if (mode === 'secure') {
        card.classList.add('mode-secure');
        badge.className = 'badge-secure';
        badge.innerHTML = 'üîí CONNEXION CHIFFR√âE (HTTPS)';
        btn.classList.add('btn-secure');
        btn.innerText = 'Connexion S√©curis√©e';
        // Ajout du champ mot de passe
        passContainer.innerHTML = '<input type="password" id="password" placeholder="Mot de passe confidentiel" value="Secret123">';
    } else {
        card.classList.add('mode-insecure');
        badge.className = 'badge-insecure';
        badge.innerHTML = '‚ö†Ô∏è NON S√âCURIS√â (HTTP)';
        btn.classList.add('btn-insecure');
        btn.innerText = 'Connexion Rapide (Risqu√©e)';
        // Pas de champ mot de passe ici
    }

    function simulateLogin() {
        const user = document.getElementById('username').value;
        const hackerView = document.getElementById('hacker-view');
        const networkData = document.getElementById('network-data');
        
        if(!user) { alert("Merci d'entrer un nom"); return; }

        hackerView.style.display = 'block';

        if (mode === 'secure') {
            // Simulation de donn√©es chiffr√©es (charabia)
            const encrypted = btoa(user + "Secret123").substring(0, 15) + "...";
            networkData.innerHTML = `
                <span class="label">Statut :</span> Chiffr√© (AES-256)<br>
                <span class="label">Donn√©es intercept√©es :</span><br>
                ${encrypted}8x4<br>
                <br>
                <em>‚úÖ Le pirate ne peut rien lire.</em>
            `;
        } else {
            // Simulation de donn√©es en clair
            networkData.innerHTML = `
                <span class="label">Statut :</span> Texte Clair<br>
                <span class="label">Donn√©es intercept√©es :</span><br>
                User: "${user}"<br>
                Auth: "OK_NO_PASS"<br>
                <br>
                <em>‚ùå Le pirate a vol√© votre identit√© !</em>
            `;
        }
    }
</script>

